    <SwitchPreference android:title="Quark style" android:key="quark_clock_v" android:defaultValue="false" />
    <SwitchPreference android:title="Xperia Lollipop Style" android:key="502" android:defaultValue="false" />
    <SwitchPreference android:title="Xperia Lollipop Style 2" android:key="511" android:defaultValue="false" />
    <SwitchPreference android:title="Xperia Marshmallow Style (Left)" android:key="601_left" android:defaultValue="false" />
    <SwitchPreference android:title="Xperia Marshmallow Style (Center)" android:key="601_center" android:defaultValue="true" />
    <SwitchPreference android:title="Xperia Marshmallow Style (Right)" android:key="601_right" android:defaultValue="false" />
